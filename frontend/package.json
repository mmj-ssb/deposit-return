{
  "name": "deposit-return-frontend",
  "version": "0.1.0",
  "description": "Mock can/bottle deposit machine frontend",
  "repository": {
    "type": "git",
    "url": "https://github.com/mmj-ssb/deposit-return/frontend"
  },
  "author": "Magnus M. Jenssen",
  "license": "Apache-2.0",
  "licenses": [
    {
      "type": "Apache-2.0",
      "url": "http://www.apache.org/licenses/LICENSE-2.0"
    }
  ],
  "dependencies": {
    "axios": "^0.26.0",
    "axios-hooks": "^3.0.0",
    "primeflex": "^3.0.0",
    "primeicons": "^5.0.0",
    "primereact": "^7.0.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-scripts": "5.0.0",
    "react-transition-group": "^4.0.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build && react-env --dest ./build",
    "test": "react-scripts test",
    "prestart": "react-env --dest ./public",
    "coverage": "react-scripts test --coverage --watchAll=false"
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@beam-australia/react-env": "^3.0.0",
    "@testing-library/jest-dom": "^5.0.0",
    "@testing-library/react": "^12.0.0",
    "@testing-library/user-event": "^13.0.0"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/**",
      "!src/index.js"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 75,
        "functions": 75,
        "lines": 75,
        "statements": 75
      }
    },
    "coverageReporters": [
      "cobertura",
      "lcov",
      "text"
    ]
  }
}
